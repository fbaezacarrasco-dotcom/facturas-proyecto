# Backend environment variables example
# Copy to .env and adjust as needed

# Server
PORT=4000

# CORS: frontend dev server origin
CORS_ORIGIN=http://localhost:5173

# Arrancar sin base de datos (modo demo)
# 1 para activar, 0 para desactivar
SKIP_DB_INIT=0

# Database (choose either DATABASE_URL or the PG* fields)
# DATABASE_URL=postgres://user:password@localhost:5432/facturas
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=facturas
